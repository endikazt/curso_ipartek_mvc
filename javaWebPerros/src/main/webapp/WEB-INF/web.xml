<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	      version="3.0">
	      
	      <!-- Tambien podemos poner la url de un controlador -->
	      <welcome-file-list>
	      	<welcome-file> /index.jsp </welcome-file>      
	      </welcome-file-list>
	      
	      <!-- 
	      	
	      	Paginas de errores para los controladores
	      	
	      	En los JSP tambien hay que indicar con una directiva a la pagina que tiene que dirigirse en caso de error
	      
	       -->
	      
	      <error-page>
	      	<error-code> 404 </error-code>
	      	<location>/pagina404.jsp</location>
	      </error-page>     
	      
	      <error-page>
	      	<error-code> 500 </error-code>
	      	<location>/error.jsp</location>
	      </error-page>     
	      
</web-app>